<div class="wrapper" style="display: flex; justify-content: center; align-items: center; min-height: 100vh; background: #f5f5f5;">
  <div class="content-box" style="background: #fff; border: 1px solid #e0e0e0; border-radius: 8px; padding: 20px; width: 600px; box-shadow: 0 2px 6px rgba(0,0,0,0.1);">
    <header class="page-header" style="text-align: center; margin-bottom: 20px;">
      <h1>Contáctanos - Farmacias</h1>
    </header>
    <div style="text-align: center;">
      <p style="margin-bottom: 20px;">Selecciona una farmacia para ver su número de teléfono:</p>
      <div style="margin: 20px 0;">
        <button class="btn" onclick="showPhone('central')" style="margin: 10px; padding: 10px 20px; border: none; border-radius: 4px; background: #8B0000; color: #fff; cursor: pointer;">Farmacia Central</button>
        <button class="btn" onclick="showPhone('sur')" style="margin: 10px; padding: 10px 20px; border: none; border-radius: 4px; background: #8B0000; color: #fff; cursor: pointer;">Farmacia del Sur</button>
        <button class="btn" onclick="showPhone('norte')" style="margin: 10px; padding: 10px 20px; border: none; border-radius: 4px; background: #8B0000; color: #fff; cursor: pointer;">Farmacia del Norte</button>
      </div>
      <div id="phone-display" style="font-size: 18px; font-weight: bold; margin-top: 20px;"></div>
    </div>
  </div>
</div>

<script>
  function showPhone(farmacia) {
    let phone = '';
    if (farmacia === 'central') {
      phone = '123-456-7890';
    } else if (farmacia === 'sur') {
      phone = '987-654-3210';
    } else if (farmacia === 'norte') {
      phone = '555-555-5555';
    }
    document.getElementById('phone-display').innerText = "Teléfono: " + phone;
  }
</script>

