<!DOCTYPE html>
<html>
  <head>
    <title>Farmacia del Puerto | Productos</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_importmap_tags %>

    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
      }
      .container {
        display: flex;
      }
      .sidebar {
        width: 200px;
        background-color: #f5f5f5;
        padding: 20px;
        min-height: 100vh;
      }
      .content {
        flex: 1;
        padding: 20px;
      }
      .sidebar ul {
        list-style: none;
        padding: 0;
      }
      .sidebar li {
        margin-bottom: 10px;
      }
      .sidebar a {
        text-decoration: none;
        color: #333;
      }
    </style>
  </head>
  <body>
    <% if user_signed_in? %>
      <div class="container">
        <div class="sidebar">
          <ul>
            <li><a href="<%= productos_path %>">Productos</a></li>
            <li><a href="<%= new_producto_path %>">Crear Producto</a></li>
            <li><a href="<%= dashboard_ventas_path %>">Ventas del Mes</a></li>
            <li><a href="<%= dashboard_stock_path %>">Stock de Productos</a></li>
            <li><a href="<%= dashboard_mas_vendidos_path %>">Productos MÃ¡s Vendidos</a></li>
            <li><a href="<%= dashboard_registrar_venta_path %>">Registrar Venta</a></li>

          </ul>
      
        </div>
        <div class="content">
          <%= yield %>
        </div>
      </div>
    <% else %>
      <%= yield %>
    <% end %>
  </body>
</html>

