<!DOCTYPE html>
<html>
  <head>
    <title>Back Office - Farmacia Ecommerce</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_importmap_tags %>
    <style>
      /* Global */
      body {
        font-family: 'Poppins', sans-serif;
        margin: 0;
        padding: 0;
        background: #f5f5f5;
        color: #333;
      }
      .container {
        display: flex;
      }
      /* Sidebar (Menú lateral) */
      .sidebar {
        width: 250px;
        background-color: #8B0000;  /* Rojo mate oscuro */
        padding: 20px;
        min-height: 100vh;
        color: #fff;
      }
      .sidebar .logo {
        text-align: center;
        margin-bottom: 20px;
      }
      .sidebar .logo img {
        max-width: 100%;
        height: auto;
      }
      .menu-section {
        margin-bottom: 20px;
      }
      .menu-button {
        width: 100%;
        background: rgba(255,255,255,0.2);
        border: none;
        color: #fff;
        padding: 10px;
        text-align: left;
        font-size: 16px;
        cursor: pointer;
        border-radius: 4px;
      }
      .menu-button:hover {
        background: rgba(255,255,255,0.3);
      }
      .submenu {
        display: none;
        margin-top: 10px;
      }
      .submenu a {
        display: block;
        padding: 8px 10px;
        text-decoration: none;
        color: #fff;
        font-size: 14px;
        border-radius: 4px;
        margin-bottom: 5px;
      }
      .submenu a:hover {
        background: rgba(255,255,255,0.2);
      }
      /* Contenido */
      .content {
        flex: 1;
        padding: 20px;
        background: url('/images/bg_section.jpg') no-repeat center center;
        background-size: cover;
      }
      /* Caja de contenido (box) */
      .content-box {
        background: rgba(255, 255, 255, 0.95);
        padding: 20px;
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
      }
      /* Encabezado de sección */
      .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px;
      }
      .page-header h1 {
        margin: 0;
        font-size: 24px;
      }
      /* Botones */
      .btn {
        display: inline-block;
        padding: 10px 15px;
        text-decoration: none;
        color: #fff;
        background: #333;
        border-radius: 4px;
        transition: background 0.3s;
      }
      .btn:hover {
        background: #555;
      }
    </style>
    <script>
      document.addEventListener("DOMContentLoaded", function(){
        // Funcionalidad para desplegar/ocultar submenús
        document.querySelectorAll('.menu-button').forEach(function(btn) {
          btn.addEventListener('click', function(){
            var submenu = this.nextElementSibling;
            submenu.style.display = submenu.style.display === "block" ? "none" : "block";
          });
        });
      });
    </script>
  </head>
  <body>
    <div class="container">
      <!-- Sidebar -->
      <div class="sidebar">
        <div class="logo">
          <img src="/images/logo.png" alt="Farmacias del Puerto">
        </div>
        <!-- Menú: Productos -->
        <div class="menu-section">
          <button class="menu-button">Productos</button>
          <div class="submenu">
            <a href="<%= productos_path %>">Listado de Productos</a>
            <a href="<%= new_producto_path %>">Crear Producto</a>
            <a href="<%= dashboard_stock_path %>">Stock de Productos</a>
          </div>
        </div>
        <!-- Menú: Ventas -->
        <div class="menu-section">
          <button class="menu-button">Ventas</button>
          <div class="submenu">
            <a href="<%= dashboard_registrar_venta_path %>">Registrar Venta</a>
            <a href="<%= dashboard_mas_vendidos_path %>">Productos Más Vendidos</a>
            <a href="<%= dashboard_ventas_path %>">Ventas del Mes</a>
          </div>
        </div>
        <!-- Menú: Corte de Caja -->
        <div class="menu-section">
          <button class="menu-button" onclick="window.location.href='<%= corte_de_caja_index_path %>'">
            Corte de Caja
          </button>
        </div>
      </div>
      
      <!-- Área de contenido -->
      <div class="content">
        <div class="content-box">
          <header class="page-header" style="display: flex; justify-content: space-between; align-items: center; padding: 20px;">
            <h1>Dashboard - Back Office</h1>
            <%= link_to "Cerrar Sesión", destroy_user_session_path, class: "btn", style: "background: #333; color: #fff; padding: 10px 20px;" %>
          </header>
          
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>


