<div class="wrapper" style="display: flex; justify-content: center; align-items: center; min-height: 100vh;">
  <div class="form-box" style="background: #fff; border: 1px solid #ccc; border-radius: 8px; padding: 20px; width: 300px; box-sizing: border-box;">
    <header class="page-header" style="text-align: center; margin-bottom: 20px;">Acceso Admin</header>
    <% if flash[:alert] %>
      <div style="color: red; text-align: center;"><%= flash[:alert] %></div>
    <% end %>
    <%= form_with url: admin_access_path, local: true do |f| %>
      <div class="input-box" style="margin-bottom: 15px;">
        <%= f.label :admin_code, "CÃ³digo de Administrador" %><br>
        <%= f.password_field :admin_code, class: "input-field", style: "width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" %>
      </div>
      <div class="actions" style="text-align: center;">
        <%= f.submit "Entrar", class: "btn", style: "padding: 10px 20px;" %>
      </div>
    <% end %>
  </div>
</div>
