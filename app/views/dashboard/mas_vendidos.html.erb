<div class="wrapper" style="display: flex; justify-content: center; align-items: center; min-height: 100vh;">
  <div class="content-box" style="background: #fff; border: 1px solid #ccc; border-radius: 8px; padding: 20px; width: 800px; box-sizing: border-box;">
    <header class="page-header" style="text-align: center; margin-bottom: 20px;">Productos MÃ¡s Vendidos</header>
    
    <% if @productos_mas_vendidos.present? %>
      <table style="width: 100%; border-collapse: collapse;">
        <thead>
          <tr style="background: #f0f0f0;">
            <th style="padding: 10px; border: 1px solid #ccc;">Producto</th>
            <th style="padding: 10px; border: 1px solid #ccc;">Cantidad Vendida</th>
          </tr>
        </thead>
        <tbody>
          <% @productos_mas_vendidos.each do |(producto_id, nombre), total| %>
            <tr>
              <td style="padding: 10px; border: 1px solid #ccc;"><%= nombre %></td>
              <td style="padding: 10px; border: 1px solid #ccc;"><%= total %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p style="text-align: center;">No hay datos de ventas.</p>
    <% end %>
  </div>
</div>
