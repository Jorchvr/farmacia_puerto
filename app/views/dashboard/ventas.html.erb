<div class="wrapper" style="display: flex; justify-content: center; align-items: center; min-height: 100vh;">
  <div class="content-box" style="background: #fff; border: 1px solid #ccc; border-radius: 8px; padding: 20px; width: 800px; box-sizing: border-box;">
    <header class="page-header" style="text-align: center; margin-bottom: 20px;">Ventas del Mes</header>
    
    <% if @ventas.any? %>
      <table style="width: 100%; border-collapse: collapse;">
        <thead>
          <tr style="background: #f0f0f0;">
            <th style="padding: 10px; border: 1px solid #ccc;">ID</th>
            <th style="padding: 10px; border: 1px solid #ccc;">Producto</th>
            <th style="padding: 10px; border: 1px solid #ccc;">Cantidad</th>
            <th style="padding: 10px; border: 1px solid #ccc;">Total</th>
            <th style="padding: 10px; border: 1px solid #ccc;">Fecha</th>
          </tr>
        </thead>
        <tbody>
          <% @ventas.each do |venta| %>
            <tr>
              <td style="padding: 10px; border: 1px solid #ccc;"><%= venta.id %></td>
              <td style="padding: 10px; border: 1px solid #ccc;"><%= venta.producto.nombre if venta.producto %></td>
              <td style="padding: 10px; border: 1px solid #ccc;"><%= venta.cantidad %></td>
              <td style="padding: 10px; border: 1px solid #ccc;"><%= number_to_currency(venta.total) %></td>
              <td style="padding: 10px; border: 1px solid #ccc;"><%= venta.fecha %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p style="text-align: center;">No se han registrado ventas este mes.</p>
    <% end %>
  </div>
</div>


