<div class="wrapper">
  <div class="form-box">
    <header>Log in</header>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="input-box">
        <i class="fas fa-envelope"></i>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Correo Electrónico", class: "input-field" %>
      </div>
      <div class="input-box">
        <i class="fas fa-lock"></i>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Contraseña", class: "input-field" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="input-box">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "Recordarme" %>
        </div>
      <% end %>
      <div class="actions">
        <%= f.submit "Log in", class: "submit" %>
      </div>
    <% end %>
    <div style="margin-top: 15px; text-align: center;">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>




