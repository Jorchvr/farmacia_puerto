<div class="wrapper" style="display: flex; justify-content: center; align-items: center; min-height: 100vh;">
  <div class="form-box" style="background: #fff; border: 1px solid #ccc; border-radius: 8px; padding: 20px; width: 400px; box-sizing: border-box;">
    <header class="page-header" style="text-align: center; margin-bottom: 20px;">Crear Producto</header>
    
    <%= form_for(@producto, local: true, html: { multipart: true }) do |f| %>
      <!-- Nombre -->
      <div class="input-box" style="margin-bottom: 15px;">
        <%= f.label :nombre %><br>
        <%= f.text_field :nombre, class: "input-field", style: "width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" %>
      </div>
      
      <!-- Descripción -->
      <div class="input-box" style="margin-bottom: 15px;">
        <%= f.label :descripcion %><br>
        <%= f.text_area :descripcion, class: "input-field", style: "width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" %>
      </div>
      
      <!-- Precio Regular -->
      <div class="input-box" style="margin-bottom: 15px;">
        <%= f.label :precio %><br>
        <%= f.number_field :precio, step: 0.01, class: "input-field", style: "width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" %>
      </div>
      
      <!-- Precio en Oferta (Opcional) -->
      <div class="input-box" style="margin-bottom: 15px;">
        <%= f.label :sale_price, "Precio en Oferta" %><br>
        <%= f.number_field :sale_price, step: 0.01, class: "input-field", placeholder: "Opcional: Precio especial", style: "width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" %>
      </div>
      
      <!-- Stock -->
      <div class="input-box" style="margin-bottom: 15px;">
        <%= f.label :stock %><br>
        <%= f.number_field :stock, class: "input-field", style: "width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" %>
      </div>
      
      <!-- Imagen del Producto -->
      <div class="input-box" style="margin-bottom: 15px;">
        <%= f.label :imagen, "Imagen del Producto" %><br>
        <%= f.file_field :imagen, class: "input-field", style: "width: 100%;" %>
      </div>
      
      <!-- Botón de Envío -->
      <div class="actions" style="text-align: center;">
        <%= f.submit "Crear Producto", class: "submit", style: "padding: 10px 20px; border: none; border-radius: 5px; background: #ddd; cursor: pointer;" %>
      </div>
    <% end %>
  </div>
</div>


